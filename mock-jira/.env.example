# Mock Jira API Configuration
# Copy to .env and customize as needed

# Server port
PORT=8443

# ===========================================
# Data Generation Configuration (Per Year Baseline)
# ===========================================

# Number of projects per year (baseline for current year)
NUM_PROJECTS=1500

# Number of initiatives per year (baseline)
NUM_INITIATIVES=1500

# Epics per project range
EPICS_PER_PROJECT_MIN=200
EPICS_PER_PROJECT_MAX=250

# Tasks per epic range
TASKS_PER_EPIC_MIN=100
TASKS_PER_EPIC_MAX=150

# Number of users to generate
NUM_USERS=500

# Seed for reproducible random data
# Change this to get different data sets
DATA_SEED=capacity-planner-mock-2024

# ===========================================
# Historical Data Configuration (5 Years)
# ===========================================

# Year range for data generation
START_YEAR=2022
CURRENT_YEAR=2026

# Scale range for historical years (80%-120% of baseline)
# Current year is always 100%
YEAR_SCALE_MIN=0.8
YEAR_SCALE_MAX=1.2

# Percentage of projects that span multiple years (0.0 - 1.0)
MULTI_YEAR_PERCENTAGE=0.30

