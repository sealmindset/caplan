# Application
PORT=8080
NODE_ENV=development

# Database
# For docker-compose: use port 5435 (external), internally uses 5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5435/capacity_planner

# CORS (optional)
FRONTEND_URL=http://localhost:3000

# Backend URL for frontend API proxying (used in next.config.js)
# For docker-compose frontend service: use http://app:8080 (internal service name)
# For local development: use http://localhost:8001 (docker-compose external port)
BACKEND_URL=http://localhost:8001

# Jira Configuration
# For production: use https://your-domain.atlassian.net
# For mock server (load testing): use http://localhost:8443
JIRA_BASE_URL=https://sntech.atlassian.net
JIRA_EMAIL=your.email@example.com
JIRA_API_TOKEN=your_jira_api_token_here
JIRA_DOMAIN=sntech
# Comma-separated list of Jira project IDs to filter (e.g., 10967,10968,10162)
JIRA_PROJECT_IDS=10967,10968,10162

# Jira Custom Field Mappings
# Custom field ID for IT Owner(s) field in Jira (find this in Jira field configuration)
JIRA_IT_OWNER_FIELD=customfield_10000
JIRA_BUSINESS_CHAMPION_FIELD=customfield_10078
JIRA_WORKSTREAM_FIELD=customfield_10447
JIRA_INSERVICE_DATE_FIELD=customfield_10121
JIRA_START_DATE_FIELD=customfield_10015
JIRA_END_DATE_FIELD=customfield_10685
JIRA_PAR_FIELD=customfield_10132
JIRA_HEALTH_STATUS_FIELD=customfield_10451
JIRA_BUSINESS_VALUE_FIELD=customfield_10200
JIRA_CAPITAL_EXPENSE_FIELD=customfield_10450

# Jira Issue Type IDs
# Epic issue type ID (default: 10000)
JIRA_EPIC_ISSUE_TYPE_ID=10000
# Initiative issue type ID (default: 10001)
JIRA_INITIATIVE_ISSUE_TYPE_ID=10001

# Tempo Configuration
TEMPO_API_TOKEN=your_tempo_api_token_here
# Authentication (Entra ID)
# Set AUTH_ENABLED=true to enforce role checks in local development.
# When false (default) and NODE_ENV=development, the RolesGuard is bypassed.
AUTH_ENABLED=false

# Entra ID group-to-role mapping (optional â€” only needed if using group claims
# instead of App Roles). Get these IDs from Azure Portal > Entra ID > Groups.
# ENTRA_ADMIN_GROUP_ID=aaaaaaaa-bbbb-cccc-dddd-eeeeeeeeeeee
# ENTRA_USER_GROUP_ID=ffffffff-gggg-hhhh-iiii-jjjjjjjjjjjj
